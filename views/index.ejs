<%- include("./partials/header.ejs") %>

    <nav class="navbar bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Todo App</a>
        </div>
    </nav>

    <div class="container mt-5">
        <form action="/add/todo" class="d-flex" method="POST">
            <input type="text" name="todo" id="" class="form-control" placeholder="Enter todo">
            <input type="submit" value="ADD" class="btn btn-md btn-primary mx-2">
        </form>

        <ul class="list-group my-5">
            <% todo.forEach(todo=> { %>
                <li class="list-group-item"><a href="/delete/todo/<%= todo._id %>"
                        class="btn btn-sm btn-danger">Delete</a>
                    <%= todo.todo %>
                </li>

                <% }) %>
        </ul>
    </div>

    <%- include("./partials/footer.ejs") %>